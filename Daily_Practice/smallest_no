import math

arr = [9,1,1,3,5,7,0]
smallest = arr[0]

for num in arr:
    if num < smallest:
        smallest = num
print("Smallest number is ", smallest)

largest = arr[0]

for num in arr:
    if num > largest:
        largest = num
print("Largest number is ", largest)

average = (largest+smallest)/2
print("The average is ", math.floor(average))

